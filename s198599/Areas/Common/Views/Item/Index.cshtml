@model IEnumerable<s198599.Models.ItemViewPopulated>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    function buyItem(itemId) {

        //alert(itemId);
        $.post('@Url.Action("AddItemToCart", "Item")', { 'id' : itemId },
            function(){

            });
        
    }
    

</script>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedCategory)
        </th>
        <th>
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SelectedCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImgPath)
        </td>
        <td>
            <a href="" onclick="buyItem(@item.ItemID); return false;" class="btn btn-primary btn-sm">Buy</a>
            @Html.ActionLink("Buy", "AddItemToCart", new { id = item.ItemID }, htmlAttributes: new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("Details", "Details", new { id = item.ItemID }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
            
        </td>
    </tr>
}

</table>
