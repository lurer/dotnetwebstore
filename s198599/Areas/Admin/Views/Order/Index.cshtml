@model IEnumerable<BOL.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.Count)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.OrderPriceTotal)
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Items.Count)
        </td>
        <td>
            @{ 
                var total = item.Items.Select(x => x.Item.Price).Sum();
            }
            @Html.Raw(total)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.OrderNumber }, htmlAttributes: new { @class = "btn btn-info btn-sm" }) 
        </td>
    </tr>
}

</table>
